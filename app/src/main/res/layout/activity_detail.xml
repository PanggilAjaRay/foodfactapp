<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".DetailActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/img_item_photo"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginTop="16dp"
            android:scaleType="centerCrop"
            android:layout_centerHorizontal="true"
            android:src="@drawable/apple" />

        <TextView
            android:id="@+id/tv_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/img_item_photo"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:textSize="30sp"
            android:textStyle="bold"
            android:text="@string/fruits_name" />

        <TextView
            android:id="@+id/textViewDesc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_item_name"
            android:textSize="23sp"
            android:textStyle="bold"
            android:text="Description" />

        <TextView
            android:id="@+id/tv_item_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/textViewDesc"
            android:layout_marginTop="15dp"
            android:textSize="20sp"
            android:text="TextView" />

        <Button
            android:id="@+id/btn_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_item_carbs"
            android:layout_marginTop="16dp"
            android:layout_centerHorizontal="true"
            android:text="Bagikan" />


        <TextView
            android:id="@+id/tv_item_calories"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_item_description"
            android:layout_marginTop="15dp"
            android:textSize="20sp"
            android:text="Calories: " />

        <TextView
            android:id="@+id/tv_item_calcium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_item_calories"
            android:layout_marginTop="15dp"
            android:textSize="20sp"
            android:text="Calcium: " />

        <TextView
            android:id="@+id/tv_item_carbs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_item_calcium"
            android:layout_marginTop="15dp"
            android:textSize="20sp"
            android:text="Carbs: " />
    </RelativeLayout>
</ScrollView>